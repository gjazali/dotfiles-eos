[user]
	name = G.A. Jazali
	email = dev@jazali.org
	signingkey = /home/jazali/.ssh/id_ed25519.pub
[github]
	user = gjazali
[color]
	ui = true
[core]
	excludesfile = ~/.gitignore_global
	editor = nvim
	pager = delta
[delta]
	navigate = true
	line-numbers = true
[merge]
	conflictstyle = diff3
[diff]
	colorMoved = default
[interactive]
	diffFilter = delta --color-only
[alias]
	root = rev-parse --show-top-level
[gpg]
	format = ssh
